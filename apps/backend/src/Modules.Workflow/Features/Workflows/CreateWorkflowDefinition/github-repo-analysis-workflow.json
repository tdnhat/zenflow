            "name": "Extract Repository Name",
            "activityType": "ZenFlow.Activities.Data.TransformDataActivity",
            "activityProperties": {
                "transformationType": "json",
                "inputProperty": "repoRawData",
                "outputProperty": "repoName",
                "jsonPath": "$.name"
